<div class="row">
    <div class="col-12">
        <div class="jumbotron" style="margin-left: 1%;">
            <h1 class="text-center mb-3"><i class="far fa-comment"></i>
                <%= room %>
            </h1>
        </div>
    </div>
</div>
<div class="row align-items-start">
    <div class="col-2">
        <div class="card">
            <br>
            <h6 class="text-center">Active Users:</h6>
            <br>
            <div id="connectedUsers" class="connectedUsers">
            </div>
        </div>
    </div>
    <div class="col-10 card">
        <div class="card-body">
            <%- include ("./partials/messages"); %>
                <div class="chat-messages">
                </div>
        </div>
        <div id="userIsTyping" class="card-trailer">
        </div>
        <div class="input-group mb-3">
            <form id="inputChatForm" class="form-inline">
                <input id="inputChatMessage" type="text" class="form-control" placeholder="Type Message" required
                    oninput="typing()">
                <button class="btn btn-primare" type="send">Send</button>
            </form>
        </div>
    </div>
</div>






<script>
    const name = "<%= name %>";
    const room = "<%= room %>";
</script>
